				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<StackPanel Grid.Row="0">
						<Panel>
							<ToggleButton Name="MenuToggle" IsChecked="{Binding IsPaneOpen}">
								<icons:MaterialIcon Kind="Menu"></icons:MaterialIcon>
							</ToggleButton>
							<TextBlock Text="Epics" IsVisible="{Binding IsPaneOpen}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
						</Panel>

						<ItemsRepeater Items="{Binding Epics}">
							<ItemsRepeater.ItemTemplate>
								<DataTemplate>
									<Border Margin="0,10,0,0" Padding="5">
										<Button Content="{Binding Name}" IsVisible="{Binding #MenuToggle.IsChecked}" Command="{ReflectionBinding #BalancingPageControl.DataContext.EpicClickedCommand}" CommandParameter="{Binding Id}"	Background="Transparent"/>
									</Border>
								</DataTemplate>
							</ItemsRepeater.ItemTemplate>
						</ItemsRepeater>
					</StackPanel>

					<Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,0,0" Margin="10,0,10,0" IsVisible="{Binding #MenuToggle.IsChecked}"/>

					<StackPanel Grid.Row="1" Orientation="Vertical">
						<CheckBox Content="Place holders" Margin="10 0 0 0" IsVisible="{Binding #MenuToggle.IsChecked}" IsChecked="{Binding ByPlaceHolder}" Command="{Binding FilterByPlaceHolderCommand}" />
						<StackPanel Grid.Row="1" Orientation="Horizontal">
							<CheckBox Content="Filter by" Margin="10 0 0 0" IsVisible="{Binding #MenuToggle.IsChecked}" ToolTip.Tip="Choose BusinessCase" IsChecked="{Binding ByBusinessCase}" 
									  Command="{Binding FilterByBusinessCaseCommand}"/>
							<TextBox Margin="3 0 0 0" Text ="{Binding BusinessCaseString}" Height="10"/>
						</StackPanel>
					</StackPanel>
				</Grid>
			</SplitView.Pane>
			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
				<Grid.RowDefinitions>
					<RowDefinition Height="3*"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

